        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        
    }
    .btn-primary {
        margin-left: 1em;
        margin-right: 1em;
padding: 0.75rem;
background-color:#0059e4; 
color: white;
border: none;
border-radius: 0.5rem;
