

<form action="/admin/categories/edit/<%= category._id %>" class="container" method="post" style="width: 800px; margin-top: 50px;">
    <div class="form-group">
        <label for="">Title</label>
        <input name="title" type="text" class="form-control" value="<%= category.title %>"/>
    </div>
    <div class="form-group">
        <label for="">Description</label>
        <textarea name="description" type="text" class="form-control"><%= category.description %></textarea>
    </div>
    <div class="form-group my-3">
        <label for="">Number of Items</label>
        <input name="numberOfItems" type="text" class="form-control" value="<%= category.numberOfItems %>"/>
    </div>
    <div class="form-group">
        <button class="btn" style="background-color: #0047b6; color: white;">Edit Category</button>
    </div>
</form>
